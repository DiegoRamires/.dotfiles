
# System
alias ls='ls -G'
alias ..='cd ..'

# Processes
alias tu='top -o cpu'
alias tm='top -o cpu'

# Git
alias g='git status'
alias ga='git add . && git add . -u && git status'
alias gb='git branch'
alias gd='git diff'
alias gdm='git diff master'
alias gp='echo "Pushing to origin HEAD..." && git push origin HEAD'
alias gpul='echo "Fetching origin and pulling origin HEAD..." && git fetch origin && git pull origin HEAD'
alias gpull=gpul

	# Commit pending changes and quote all args as message
	function gc(){
		git commit -v -a -m "$*"
	}