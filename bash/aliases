
# System
alias ls='ls -G'
alias ..='cd ..'

# Processes
alias tu='top -o cpu'
alias tm='top -o cpu'

# Git

alias g='git status'
alias ga='git add . && git add . -u && git status'
alias gb='git branch'
alias gd='git diff'
alias gl='git log'
alias gdm='git diff master'

	# Commit pending changes and quote all args as message
	function gc(){
		git commit -v -a -m "$*"
	}
	
	function gp(){
		# Defines the current git branch
		export CURRENT_BRANCH=`git branch 2> /dev/null | grep -e ^* | sed -E  s/^\\\\\*\ \(.+\)$/\\\\\\1\\/`

		echo Pushing to origin $CURRENT_BRANCH...
		git push origin $CURRENT_BRANCH
	}

	function gpul(){
		# Defines the current git branch
		export CURRENT_BRANCH=`git branch 2> /dev/null | grep -e ^* | sed -E  s/^\\\\\*\ \(.+\)$/\\\\\\1\\/`

		echo Pulling from origin $CURRENT_BRANCH...
		git pull origin $CURRENT_BRANCH
	}
	
	alias gpull=gpul

# Development
alias spna='rspec spec_no_rails/'
function spn(){ rspec --colour $*; }